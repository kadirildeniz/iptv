{
  "expo": {
    "name": "LUMO",
    "slug": "lumo",
    "version": "1.0.0",
    "orientation": "landscape",
    "icon": "./assets/images/icon.png",
    "scheme": "lumo",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.lumo.iptv"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#0033ab"
      },
      "package": "com.lumo.iptv",
      "versionCode": 1,
      "useNextNotificationsApi": true,
      "edgeToEdgeEnabled": true,
      "softwareKeyboardLayoutMode": "pan",
      "isTV": true,
      "tvBanner": "./assets/images/tv_banner.png",
      "usesFeature": [
        {
          "name": "android.software.leanback",
          "required": true
        },
        {
          "name": "android.hardware.touchscreen",
          "required": false
        }
      ],
      "intentFilters": [
        {
          "action": "android.intent.action.MAIN",
          "category": [
            "android.intent.category.LEANBACK_LAUNCHER",
            "android.intent.category.LAUNCHER",
            "android.intent.category.DEFAULT"
          ]
        }
      ],
      "permissions": [
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "WAKE_LOCK",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0033ab"
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": false
        }
      ],
      [
        "@morrowdigital/watermelondb-expo-plugin",
        {
          "useSQLite": true,
          "disableJsi": true,
          "enableHermes": true
        }
      ],
      "expo-sqlite",
      "react-native-video",
      "./plugins/withAudioBooster",
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true,
            "minSdkVersion": 24,
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "34.0.0",
            "kotlinVersion": "2.0.21",
            "extraProguardRules": "-keep class com.facebook.react.** { *; } -keep class com.nozbe.watermelondb.** { *; } -keep class com.swmansion.reanimated.** { *; }",
            "newArchEnabled": true
          }
        }
      ],
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": false
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "08e6b6b4-4456-4178-a656-6ce038b05a76"
      }
    }
  }
}
